div.navbar.navbar-default.navbar-static-top.hero(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        p subbly.tv

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav

      ul.nav.navbar-nav.navbar-right
        li(ng-show='isLoggedIn()')
          p.navbar-text {{ getCurrentUser().name }}

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/signup")}')
          a(href='/signup') Sign up

        li(ng-hide='isLoggedIn()', ng-class='{active: isActive("/login")}')
          a(href='/login') Login

        li.dropdown(ng-show='isLoggedIn()')
          a.dropdown-toggle(data-toggle='dropdown', href='#')
            span.glyphicon.glyphicon-cog
            
          ul.dropdown-menu
            li(ng-show='isLoggedIn()', ng-class='{active: isActive("/pitch")}')
              a(href='/pitch') Create Pitch
            li(ng-show='isLoggedIn()', ng-class='{active: isActive("/userproject")}')
              a(href='/userproject/{{getCurrentUser()._id}}') Projects
            li(ng-show='isLoggedIn()', ng-class='{active: isActive("/settings")}')
              a(href='/settings') Settings

        li(ng-show='isLoggedIn()', ng-class='{active: isActive("/logout")}')
          a(href='', ng-click='logout()') Logout
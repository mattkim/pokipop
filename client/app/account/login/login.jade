div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-sm-4
    .col-sm-4
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          label Email
          input.form-control(type='text', name='email', ng-model='user.email', required='')
        .form-group
          label Password
          input.form-control(type='password', name='password', ng-model='user.password', required='')
        .form-group.has-error
          p.help-block(ng-show='(form.email.$error.required || form.password.$error.required) && submitted')
            | Please enter your email and password.
          p.help-block {{ errors.other }}
        button.btn.btn-default.btn-small.btn-login(type='submit')
          | Login

      hr

      div
        a.btn.btn-default.btn-small.btn-facebook(href='', ng-click='loginOauth("facebook")')
          i.fa.fa-facebook
          |  Connect
        = ' '
        a.btn.btn-default.btn-small.btn-twitter(href='', ng-click='loginOauth("twitter")')
          i.fa.fa-twitter
          |  Connect
      hr
